{
  "name": "Keyboard Pin",
  "version": "0.2",
  "description": "Creates a keyboard shortcut (Alt + Shift + P) to toggle the pinned state of the currently selected tab",
  "permissions": [
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "commands": {
    "toggle-pin": {
      "suggested_key": { "default": "Alt+Shift+P" },
      "description": "Toggle tab pin"
    }
  },
  "manifest_version": 2
}
