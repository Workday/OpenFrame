source_set("common") {
  sources = [
    "crash_keys.cc",
    "crash_keys.h",
  ]

  deps = [
    "//base",
  ]

  if (is_mac || is_ios) {
    sources += [
      "objc_zombie.h",
      "objc_zombie.mm",
    ]
  }
}

source_set("unit_tests") {
  testonly = true
  sources = [
    "crash_keys_unittest.cc",
  ]

  deps = [
    ":common",
    "//base",
    "//testing/gtest",
  ]

  if (is_mac || is_ios) {
    sources += [ "objc_zombie_unittest.mm" ]
  }
}
